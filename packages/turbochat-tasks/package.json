{
  "name": "@turbochat/tasks",
  "version": "0.1.0",
  "description": "Task management package for TurboChat",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "./client": "./src/client.ts",
    "./server": "./src/server.ts"
  },
  "scripts": {
    "build": "tsc && bun build src/client.ts src/server.ts --outdir dist --format esm --format cjs --target node --declaration",
    "dev": "tsc --watch & bun build src/client.ts src/server.ts --outdir dist --format esm --format cjs --watch --target node",
    "lint": "eslint src/**/*.ts",
    "test": "jest"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.3",
    "ai": "4.2.10",
    "drizzle-orm": "^0.30.9",
    "hono": "^4.7.5",
    "next-auth": "5.0.0-beta.25",
    "postgres": "^3.4.5",
    "react": "19",
    "uuid": "^9.0.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.8",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
