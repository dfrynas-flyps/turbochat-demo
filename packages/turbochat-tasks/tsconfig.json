{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "declarationMap": true,
    "composite": true,
    "skipLibCheck": true,
    "jsx": "react",
    "jsxFactory": "React.createElement"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}